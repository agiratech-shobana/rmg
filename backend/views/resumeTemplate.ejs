
<!DOCTYPE html>
<html>
<head>
  <title>Company Resume</title>
  <style>
    body { 
        font-family: 'Helvetica Neue', Arial, sans-serif; 
        margin: 0; 
        padding: 0; 
        color: #333;
    }
    .container {
        width: 80%;
        margin: 20px auto;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .header {
        display: flex;
        align-items: center;
        border-bottom: 2px solid #0056b3; /* Company brand color */
        padding-bottom: 15px;
        margin-bottom: 20px;
    }
    .header img {
        height: 50px; /* Adjust logo size */
        margin-right: 20px;
    }
    .header-info h1 {
        margin: 0;
        color: #0056b3;
    }
    .header-info p {
        margin: 0;
        color: #555;
        font-weight: bold;
    }
    h2 {
        color: #0056b3;
        border-bottom: 1px solid #ccc;
        padding-bottom: 5px;
        margin-top: 25px;
    }
    .section {
        margin-bottom: 20px;
    }
    .project {
        margin-bottom: 15px;
    }
    .project h3 {
        margin: 0 0 5px 0;
        color: #004085;
    }
    .project ul {
        margin-top: 5px;
        padding-left: 20px;
    }
  </style>
</head>
<body>

      <div class="header-info">
        <!-- <h1 style="text-align: center;"><%= name || "Candidate Name" %></h1>
        <p><%= designation || "" %></p> -->
        <h1 style="color: #0056b3; font-size: 2em; margin: 0; padding-top: 20px;text-align: center;">
            <%= name || "Candidate Name" %>
        </h1>
        <p style="color: #555; font-weight: bold; font-size: 1.2em; margin: 0;text-align: center;">
            <%= designation || "" %>
        </p>
      </div>

    <div class="section">
      <h2>Summary / Career Objective</h2>
      <p><%= careerObjectiveOrSummary %></p>
    </div>

    <div class="section">
      <h2>Skills</h2>
      <% if (Object.keys(skills).length > 0) { %>
        <% for (const category in skills) { %>
            <p><strong><%= category %>:</strong> <%= skills[category] %></p>
        <% } %>
      <% } else { %>
        <p>No skills listed.</p>
      <% } %>
    </div>

    <div class="section">
      <h2>Projects</h2>
      <% if (projects.length > 0) { %>
        <% projects.forEach(p => { %>
          <div class="project">
            <h3><%= p.title %></h3>
            <p><strong>Description:</strong> <%= p.description %></p>
            <% if (p.roles && p.roles.length > 0) { %>
                <p><strong>Roles:</strong></p>
                <ul>
                    <% p.roles.forEach(role => { %>
                        <li><%= role %></li>
                    <% }) %>
                </ul>
            <% } %>
            <% if (p.techStack && p.techStack.length > 0) { %>
                <p><strong>Tech Stack:</strong> <%= p.techStack.join(', ') %></p>
            <% } %>
          </div>
        <% }) %>
      <% } else { %>
        <p>No projects found.</p>
      <% } %>
    </div>
  </div>
</body>
</html>